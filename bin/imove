#/bin/bash

#
# Usage: `imove path1.to.varA path2.to.varB files`
# 
# Example: `imove imagor.image.custom_warp_affine imagor.transforms.custom_warp_affine **/*.py`
#

SRC="$1"
DEST="$2"
FILES="$3"

isort -sl "$FILES"

sed -i '' 's/from ${SRC%.*} import ${SRC##*.}/from ${DEST%.*} import ${DEST##*.}/g' "$FILES"

isort "$FILES"
