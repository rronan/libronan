#!/usr/bin/env python
# -*- coding: utf-8 -*-
#
import random
import sys

from PIL import Image
import numpy as np

def depth2image(arr):
    arr -= 24
    arr  = np.clip((-arr + 1) / 2, 0, 1)
    res = arr * 255
    return Image.fromarray(res.astype('uint8'))

def main():
    raw_im = np.load(sys.argv[1])
    im = depth2image(np.array(raw_im))
    im.save(sys.argv[2])

if __name__=='__main__':
    main()
